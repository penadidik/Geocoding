<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="project.penadidik.cleanarchitecture.model.FavoriteModel"/>

    </data>

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_account_circle"
                android:gravity="center|end"
                android:minWidth="@dimen/dp_72"
                android:minHeight="@dimen/dp_32"
                android:paddingStart="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_2"
                android:textAppearance="?android:attr/textAppearanceListItem"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1104"
                tools:ignore="ContentDescription" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:minHeight="@dimen/dp_64"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_weight="1"
                style="@style/AppTheme.ItemSelectable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/dp_32"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:text="@{user.login}"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_16"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="google/abc"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:text="@{user.htmlUrl}"
                    android:textSize="@dimen/sp_14"
                    android:maxLines="2"
                    android:textColor="@color/gray"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name"
                    tools:text="Android app sample"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_deleted"
                android:gravity="center|end"
                android:minWidth="@dimen/dp_72"
                android:minHeight="@dimen/dp_32"
                android:padding="@dimen/dp_16"
                android:onClick="@{}"
                android:textAppearance="?android:attr/textAppearanceListItem"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1104"
                tools:ignore="ContentDescription"
                tools:src="@drawable/ic_deleted"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>